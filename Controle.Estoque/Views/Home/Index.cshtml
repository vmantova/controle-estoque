@model List<Controle.Estoque.Models.Produto>
@{
    ViewData["Title"] = "Controle de Estoque";
}

<br />

<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="row">
                <div class="col-lg-1">
                    <i class="fas fa-exclamation-triangle fa-5x"></i>
                </div>
                <div class="col-lg-">
                    <h2> <strong> Produtos com estoque crítico</strong></h2>
                </div>
            </div>
        </div>
        <div class="panel-body">
            @if (Model.Count > 0)
            {
                <table id="tabEstoqueBaixo" class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Produto</th>
                            <th>Categoria</th>
                            <th>Mínimo</th>
                            <th>Estoque Atual</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr class="text-danger">
                            <td><strong>@item.Codigo</strong> </td>
                            <td><strong>@item.Descricao</strong></td>
                            <td><strong>@item.Categoria.Descricao</strong></td>
                            <td><strong>@item.EstoqueMinimo</strong></td>
                            <td><strong>@item.EstoqueAtual</strong></td>
                        </tr>
                        }
                    </tbody>
                </table>

            }
            else
            {
                <div class="row">
                    <div class="col-lg-12">
                        <div class="alert alert-success">Nenhum produto perto do estoque mínimo</div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>