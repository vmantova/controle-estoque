@model Controle.Estoque.Models.Venda

@{
    ViewData["Title"] = "Create";
}
<hr />
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div style="margin-top:15px" class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-8">
                            <h2><i class="fas fa-shopping-cart"></i><strong>&nbsp; Venda</strong></h2>
                        </div>
                    </div>
                </div>
                <div class=" panel-body">
                    <form id="VendasForm" name="VendasForm" class="form-horizontal" asp-controller="Vendas" asp-action="Create" method="post">
                        <div class="form-group">
                            <label class="col-lg-2 control-label">
                                <strong>Produto:</strong>
                            </label>
                            <div class="col-lg-8">
                                @if (ViewBag.Produtos != null)
                                {
                                    <select asp-for="ProdutoId" id="" placeholder="Selecione o Produto" asp-items="@(new SelectList(ViewBag.Produtos,"Id","Descricao"))" class="form-control"></select>
                                    <span asp-validation-for="ProdutoId" class="text-danger"></span>


                                }
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">
                                <strong>Cliente:</strong>
                            </label>
                            <div class="col-lg-8">
                                @if (ViewBag.Clientes != null)
                                {
                                    <select asp-for="ClienteId" asp-items="@(new SelectList(ViewBag.Clientes,"IdCliente","NomeCliente"))" class="form-control"></select>
                                    <span asp-validation-for="ClienteId" class="text-danger"></span>

                                }
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Quantidade:</label>
                            <div class="col-lg-2">
                                <input asp-for="Quantidade" placeholder="100" class="form-control" type="number" />
                                <span asp-validation-for="Quantidade" class="text-danger"></span>

                            </div>
                            <label class="col-lg-2 control-label">
                                <strong>Unidade de Medida:</strong>
                            </label>
                            <div class="col-lg-4">
                                @if (ViewBag.Unidades != null)
                                {
                                    <select asp-for="UnidadeId" asp-items="@(new SelectList(ViewBag.Unidades,"Id","Descricao"))" class="form-control"></select>
                                    <span asp-validation-for="UnidadeId" class="text-danger"></span>

                                }
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Observações:</label>
                            <div class="col-lg-8">
                                <input asp-for="Observacao" placeholder="Observação" class="form-control" />
                            </div>
                        </div>

                        <hr />
                        <div class="form-group">
                            <div class="col-lg-offset-8 text-center">
                                <button type="submit" class="btn btn-success btn-lg">Enviar</button>
                                <a asp-controller="Vendas" asp-action="Create" class="btn btn-warning btn-lg">Limpar</a>
                                <a asp-controller="Vendas" asp-action="Index" class="btn btn-danger btn-lg">Cancelar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
