@model Controle.Estoque.Models.Produto

<h2>Exclusão de produtos.</h2>

<br />



<form asp-controller="Produtos" asp-action="Delete" method="post" class="form-horizontal">
    @Html.HiddenFor(t => t.Id)

    <div class="form-group">
        <label class="col-sm-2 control-label">Estoque Atual:</label>
        <div class="col-sm-2">
            <input asp-for="EstoqueAtual"  class="form-control" disabled>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Quantidade:</label>
        <div class="col-sm-2">
            <input id="qtde" type="text" name="qtde" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-md btn-primary">Confirmar exclusão</button>
    </div>
</form>

