@model Controle.Estoque.Models.Locacao

@{
    ViewData["Title"] = "Nova Locação";
}
<br />
<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="row">
                <div class="col-lg-8">
                    <h2><i class="fas fa-hands-helping fa-2x"></i>  <strong>Nova Locação</strong>  </h2>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <form asp-controller="Locacao" asp-action="New" method="post" class="form-horizontal">

                <div class="form-group">
                    <label class="col-sm-2 control-label">Cliente:</label>
                    <div class="col-sm-6">
                        @if (ViewBag.Clientes != null)
                        {
                        <select asp-for="ClienteId" asp-items="ViewBag.Clientes" class="form-control" required>
                            <option value=""></option>
                        </select>
                        }
                        else
                        {
                         <select class="form-control">
                             <option value=""></option>
                         </select>   
                        }
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Produto:</label>
                    <div class="col-sm-6">
                        @if (ViewBag.Produtos != null)
                        {
                            <select asp-for="ProdutoId" asp-items="ViewBag.Produtos" class="form-control" required>
                                <option value=""></option>
                            </select>
                        }
                        else
                        {
                            <select class="form-control">
                                <option value=""></option>
                            </select>
                        }
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Quantidade:</label>
                    <div class="col-sm-1">
                        <input required id="Quantidade" name="Quantidade" type="text" class="form-control campo-numerico"/>
                    </div>
                    <div id="estoqueAtual"  class="col-sm-4">
                        <span style="font-size:15px;" class="label label-info">Estoque Atual : 15</span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Data de Devolução:</label>
                    <div class="col-sm-2">
                        <div class="input-group">
                            <input required type="text" id="DataDevolucao" name="DataDevolucao" class="form-control campo-data" />
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">Preço:</label>
                    <div class="col-sm-1">
                        <input required id="ValorTotal" name="ValorTotal" type="text" class="form-control"  />
                    </div>
                    <div class="col-sm-1">
                        <button onclick="CalculaPreco('@Url.Action("CalculaPrecoTotal","Locacao")')" type="button" class="btn btn-warning" >Calcular</button>
                    </div>
                   
                </div>

                <div class="form-group" style="margin-left:25px">
                    <button type="submit" class="btn btn-success">Enviar</button>
                    <a  asp-controller="Locacao" asp-action="Index" class="btn btn-danger">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

