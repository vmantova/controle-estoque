@model Controle.Estoque.Models.Unidade

@{
    ViewData["Title"] = "Novo";
}
<hr />
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div style="margin-top:15px" class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-8">
                            <h2><i class="fas fa-plus-circle"></i><strong>&nbsp; Unidade de Medida</strong></h2>
                        </div>
                    </div>
                </div>
                <div class=" panel-body">
                    <form id="UnidadesForm" name="UnidadesForm" class="form-horizontal" asp-controller="Unidades" asp-action="Create" method="post">

                        <div class="form-group">
                            <label class="col-lg-2 control-label">
                                <strong>Sigla:</strong>
                            </label>
                            <div class="col-lg-1">
                                <input asp-for="Sigla"  class="form-control" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">
                                <strong>Categoria:</strong>
                            </label>
                            <div class="col-lg-4">
                                <input asp-for="Descricao"  class="form-control" required />
                            </div>
                        </div>

                        <hr />
                        <div class="form-group">
                            <div class="col-lg-offset-8 text-center">
                                <button type="submit" class="btn btn-success btn-lg">Enviar</button>
                                <a asp-controller="Estoque" asp-action="Index" class="btn btn-danger btn-lg">Cancelar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
